pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'Construction du projet:'
                powershell 'mvn clean package'
            }
        }
        stage('Test') {
            steps {
                echo 'Ex√©cution des tests:'
                powershell 'mvn test'
            }
        }
        stage('SonarQube Analysis') {
            steps {
                echo 'Analyse SonarQube:'
                // Lancement de l'analyse SonarQube avec Maven
                powershell 'mvn sonar:sonar'
            }
        }
    }
}